<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<AnchorPane prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MainMenuController">
    <GridPane layoutX="-1.0" prefHeight="377.0" prefWidth="500.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="134.0" minHeight="10.0" prefHeight="59.646942138671875"
                            vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="134.0" minHeight="7.0" prefHeight="71.96841430664062"
                            vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="245.0" minHeight="10.0" prefHeight="69.53158569335938"
                            vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="245.0" minHeight="10.0" prefHeight="73.724853515625"
                            vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="286.0" minHeight="10.0" prefHeight="103.275146484375"
                            vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox alignment="CENTER" prefHeight="92.0" prefWidth="497.0" GridPane.rowIndex="2">
            <Button fx:id="loadGameButton" onMouseClicked="#onLoadGameClick" mnemonicParsing="false" prefHeight="40.0"
                    prefWidth="200.0"
                    text="Load Game" textAlignment="CENTER">
                <styleClass>
                    <String fx:value="load-game"/>
                </styleClass>
            </Button>
        </VBox>
        <VBox alignment="CENTER" layoutX="10.0" layoutY="97.0" prefHeight="68.0" prefWidth="500.0"
              GridPane.rowIndex="3">
            <Button fx:id="exitGameButton" onMouseClicked="#onExitGameClick" mnemonicParsing="false" prefHeight="40.0"
                    prefWidth="200.0"
                    text="Exit Game" textAlignment="CENTER">
                <styleClass>
                    <String fx:value="exit-game"/>
                </styleClass>
            </Button>
        </VBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
            <Button fx:id="newGameButton" onMouseClicked="#onNewGameClick" mnemonicParsing="false" prefHeight="40.0"
                    prefWidth="200.0"
                    text="New Game" textAlignment="CENTER">
                <styleClass>
                    <String fx:value="new-game"/>
                </styleClass>
            </Button>
        </VBox>
    </GridPane>
</AnchorPane>
