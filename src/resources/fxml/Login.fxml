<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.LoginController">
    <GridPane prefHeight="377.0" prefWidth="500.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="120.0" minHeight="7.0" prefHeight="85.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="245.0" minHeight="10.0" prefHeight="68.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="245.0" minHeight="10.0" prefHeight="66.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="286.0" minHeight="10.0" prefHeight="158.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox alignment="CENTER" GridPane.rowIndex="1" prefWidth="500.00">
            <Text fx:id="errorText" fill="WHITE">Placeholder</Text>
            <TextField fx:id="usernameText" alignment="CENTER" maxWidth="200" prefHeight="40.0" prefWidth="200.0"
                       promptText="Username" focusTraversable="false"/>
        </VBox>
        <VBox alignment="CENTER" layoutX="10.0" layoutY="97.0" prefHeight="68.0" prefWidth="500.0"
              GridPane.rowIndex="2">
            <Button fx:id="actionButton" onMouseClicked="#onActionClick" mnemonicParsing="false" prefHeight="40.0"
                    prefWidth="200.0"
                    text="Signup">
                <styleClass>
                    <String fx:value="signup-button"/>
                </styleClass>
            </Button>
        </VBox>
    </GridPane>
</AnchorPane>
