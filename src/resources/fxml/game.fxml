<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="500.0" stylesheets="@../styles/MainLayout.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.controllers.StartGameController" >
<!--   <stylesheets>-->
<!--      <String fx:value="@../styles/Game.css"/>-->
<!--   </stylesheets>-->
   <GridPane layoutX="-2.0" prefHeight="700.0" prefWidth="502.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="158.0" minWidth="10.0" prefWidth="78.0"/>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="312.0" minWidth="10.0" prefWidth="278.0"/>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="10.0" prefWidth="140.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="226.0" minHeight="0.0" prefHeight="85.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="615.0" minHeight="10.0" prefHeight="615.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <VBox alignment="CENTER" prefHeight="91.0" prefWidth="84.0">
            <Button mnemonicParsing="false" fx:id="pauseButton" text="p" onMouseClicked="#onPauseClick"/>
         </VBox>
      </AnchorPane>
      <AnchorPane prefHeight="75.0" prefWidth="108.0" GridPane.columnIndex="2">
         <HBox alignment="CENTER" layoutY="9.0" prefHeight="91.0" prefWidth="140.0">
            <ImageView fitHeight="51.0" fitWidth="69.0" fx:id="starImage" pickOnBounds="true" preserveRatio="true"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-text-fill: white" fx:id="scoreText" text="9"/>
         </HBox>
      </AnchorPane>
      <Button fx:id="addObstaclesButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onAddObstacles"
              text="Render" GridPane.rowIndex="1"/>
      <Button fx:id="animateObstaclesButton" alignment="CENTER" mnemonicParsing="false"
              onMouseClicked="#onAnimateObstacles" text="Play" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
   </GridPane>
</AnchorPane>
